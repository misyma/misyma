{
  "name": "@apps/backend",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch --inspect --no-warnings=ExperimentalWarning --experimental-specifier-resolution=node --loader ts-node/esm/transpile-only src/index.ts",
    "build": "tsc --build tsconfig.prod.json",
    "build:dev": "tsc --build tsconfig.dev.json",
    "test:unit": "vitest .unit.test.ts --config vitest.unit.config.js",
    "test:unit:run": "npm run test:unit -- --run",
    "test:integration": "NODE_ENV=test vitest --config vitest.integration.config.js",
    "test:integration:run": "npm run test:integration -- --run",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.806.0",
    "@aws-sdk/lib-storage": "3.806.0",
    "@common/contracts": "*",
    "@fastify/cors": "11.0.1",
    "@fastify/helmet": "13.0.1",
    "@fastify/multipart": "9.0.3",
    "@fastify/swagger": "9.5.1",
    "@fastify/swagger-ui": "5.2.2",
    "@fastify/type-provider-typebox": "5.1.0",
    "@sinclair/typebox": "0.34.33",
    "bcrypt": "6.0.0",
    "cockatiel": "3.2.1",
    "config": "3.3.12",
    "fastify": "5.3.2",
    "inversify": "7.5.1",
    "jsonwebtoken": "9.0.2",
    "knex": "3.1.0",
    "pg": "8.15.6",
    "pino": "9.6.0",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@faker-js/faker": "9.7.0",
    "@types/bcrypt": "5.0.2",
    "@types/config": "3.3.5",
    "@types/jsonwebtoken": "9.0.9"
  }
}
