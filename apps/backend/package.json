{
  "name": "@bookshelf/backend",
  "private": true,
  "type": "module",
  "scripts": {
    "start:dev": "nodemon --watch './**/*.ts' --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm' src/index.ts",
    "build:clean": "rimraf dist",
    "build": "tsc --build tsconfig.build.json",
    "build:dev": "tsc --build tsconfig.json",
    "test:unit": "dotenv -e .env.test vitest .unit.test.ts --threads false",
    "test:integration": "dotenv -e .env.test vitest .integration.test.ts --threads false",
    "lint": "eslint . --ext .ts --cache --max-warnings 0",
    "lint:fix": "npm run lint -- --fix"
  },
  "dependencies": {
    "bunyan": "^1.8.15",
    "dotenv": "^16.3.1",
    "fastify": "^4.23.2",
    "http-status-codes": "^2.3.0",
    "inversify": "^6.0.1",
    "knex": "^2.5.1",
    "pg": "^8.11.3",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.1.0",
    "@types/bunyan": "^1.8.9",
    "@types/node": "^20.6.4",
    "@types/uuid": "^9.0.4",
    "@types/validator": "^13.11.1",
    "dotenv": "^16.3.1",
    "nodemon": "^3.0.1"
  }
}
