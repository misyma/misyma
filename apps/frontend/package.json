    "@tanstack/react-query": "^5.22.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "i18next": "^23.8.3",
    "i18next-browser-languagedetector": "^7.2.0",
    "localforage": "^1.10.0",
    "lucide-react": "^0.331.0",
    "match-sorter": "^6.3.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.50.1",
    "react-i18next": "^14.0.5",
    "react-redux": "^9.1.0",
    "react-router-dom": "^6.22.1",
