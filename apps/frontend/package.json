{
  "name": "@apps/frontend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "build:dev": "tsc --noEmit && vite build",
    "lint": "eslint . --ext ts,tsx --cache --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "preview": "vite preview",
    "test:unit": "vitest .unit.test.tsx",
    "test:unit:run": "npm run test:unit -- --run",
    "test:integration": "vitest .integration.test.tsx --pool forks --poolOptions.forks.singleFork",
    "test:integration:run": "npm run test:integration -- --run"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@radix-ui/react-label": "^2.0.2",
