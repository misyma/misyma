{
  "name": "misyma",
  "private": true,
  "scripts": {
    "prepare": "node -e \"if (process.env.NODE_ENV !== 'production') { require('husky').install() }\"",
    "build": "turbo run build",
    "build:clean": "turbo run build:clean",
    "test:unit": "turbo run test:unit:run --concurrency 5",
    "test:integration": "turbo run test:integration --concurrency 5",
    "lint": "turbo run lint --concurrency 5",
    "lint:fix": "turbo run lint:fix",
    "codebase:validate": "turbo run lint test:unit:run test:integration:run --concurrency 5",
    "frontend:dev": "npm run dev -w @apps/frontend",
    "backend:dev": "npm run dev -w @apps/backend"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "esbuild": "^0.19.8",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "turbo": "^1.11.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "volta": {
    "node": "20.10.0"
  },
  "engines": {
    "node": "20.10.0"
  },
  "workspaces": [
    "apps/*",
    "common/*"
  ]
}
