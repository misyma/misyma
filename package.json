{
  "name": "bookshelf",
  "version": "1.0.0",
  "author": "Michal Cieslar",
  "type": "module",
  "scripts": {
    "start:dev": "nodemon --watch './**/*.ts' --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm' src/index.ts",
    "build:clean": "rimraf dist",
    "build": "tsc --build tsconfig.build.json",
    "build:dev": "tsc --build tsconfig.json",
    "test:unit": "vitest .unit.test.ts --threads false",
    "test:unit:watch": "npm run test:unit -- --watch",
    "test:integration": "vitest .integration.test.ts --threads false",
    "test:integration:watch": "npm run test:integration -- --watch",
    "lint": "eslint . --ext .ts --cache --max-warnings 0",
    "lint:fix": "npm run lint -- --fix"
  },
  "dependencies": {
    "bunyan": "^1.8.15",
    "dotenv": "^16.3.1",
    "fastify": "^4.23.2",
    "http-status-codes": "^2.3.0",
    "inversify": "^6.0.1",
    "knex": "^2.5.1",
    "pg": "^8.11.3",
    "tslib": "^2.6.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.1.0",
    "@types/bunyan": "^1.8.9",
    "@types/node": "^20.6.4",
    "@types/uuid": "^9.0.4",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "dotenv": "^16.3.1",
    "esbuild": "^0.19.3",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.5"
  },
  "volta": {
    "node": "20.4.0",
    "npm": "9.8.0"
  },
  "engines": {
    "node": "=20.4.0",
    "npm": "=9.8.0"
  }
}
