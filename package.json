{
  "name": "misyma",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:clean": "turbo run build:clean",
    "build:dev": "tsc -b tsconfig.dev.json",
    "build:dev:watch": "npm run build:dev -- --watch",
    "test:unit": "turbo run test:unit:run --concurrency 5",
    "test:integration": "turbo run test:integration --concurrency 5",
    "lint": "turbo run lint --concurrency 5",
    "lint:fix": "turbo run lint:fix",
    "frontend:dev": "npm run dev -w @apps/frontend",
    "backend:dev": "npm run dev -w @apps/backend"
  },
  "devDependencies": {
    "@types/node": "^20.10.3",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "dotenv-cli": "^7.3.0",
    "esbuild": "^0.19.8",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "turbo": "^1.11.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.1"
  },
  "volta": {
    "node": "20.10.0"
  },
  "engines": {
    "node": "20.10.0"
  },
  "workspaces": [
    "apps/*",
    "common/*"
  ]
}
